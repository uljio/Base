# Alchemy Configuration
ALCHEMY_API_KEY=your_alchemy_key_here

# Wallet Configuration
# WARNING: Never commit this file with real private keys!
# Format: 64-character hex string (with or without 0x prefix)
# Example: 0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
# Leave as placeholder for dry-run mode (no real transactions will be sent)
PRIVATE_KEY=your_private_key_here

# Flash Loan Contract
# Leave empty until contract is deployed
FLASH_LOAN_CONTRACT_ADDRESS=

# Bot Configuration
MIN_PROFIT_USD=10
MAX_GAS_PRICE_GWEI=5
EXECUTION_MODE=dry-run
LOG_LEVEL=info

# Slippage and Risk
MAX_SLIPPAGE_PERCENT=1
MAX_POSITION_SIZE_USD=1000

# Database
DATABASE_PATH=./data/arbitrage.db

# API Server
API_PORT=3000
API_KEY=secure_random_key_here

# Network Configuration
NETWORK=base-mainnet
# Options: base-mainnet, base-sepolia

# Pool Discovery
MIN_LIQUIDITY_USD=50000
MAX_POOLS_TO_MONITOR=50
POOL_UPDATE_INTERVAL_MINUTES=60
# Accept all tokens from discovered pools (true) or only whitelisted tokens (false)
ACCEPT_ALL_TOKENS=true

# Monitoring
PRICE_FRESHNESS_SECONDS=5
BLOCK_PROCESSING_TIMEOUT_MS=1000

# Flash Loan
AAVE_POOL_ADDRESS_PROVIDER=0xe20fCBdBfFC4Dd138cE8b2E6FBb6CB49777ad64D
# Base mainnet Aave V3 Pool Address Provider
